[
  {
    "name": "transfer",
    "description": "Send crypto assets to an address",
    "parameters": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "description": "The transfer destination address, it must be a valid wallet address or an ENS name"
        },
        "amount": {
          "type": "number",
          "description": "The amount to transfer, eg 3.5"
        },
        "token": {
          "type": "string",
          "description": "The token symbol eg ETH"
        }
      },
      "required": [
        "address",
        "amount",
        "token"
      ]
    }
  },
  {
    "name": "mint",
    "description": "Mint token in the wallet",
    "parameters": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "description": "The amount to mint, eg 3.5"
        },
        "token": {
          "type": "string",
          "description": "The token symbol eg ETH"
        }
      },
      "required": [
        "amount",
        "token"
      ]
    }
  }
]